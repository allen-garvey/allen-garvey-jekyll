<main class="home wrapper">
    {{#each sections.list}}
        {{#with (lookup @root.sections this)}}
            <section data-section="{{ slug }}">
                {{#if heading}}
                    <h2 class="section-heading">{{ heading }}</h2>
                {{/if}}
                {{> (lookup . 'slug') content=content}}
            </section>
        {{/with}}
    {{/each}}
</main>