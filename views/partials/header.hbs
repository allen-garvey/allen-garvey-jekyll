<header class="site-header">
    <a href="/">
        <img src="{{ imageUrl 'allen-garvey.jpg' }}" alt="Photo of Allen Garvey" class="author_img">
    </a>
    <h1 class="site-title">Allen Garvey</h1>
    <div class="nav-overlay-container">
        <div class="tagline">
            <div class="tagline-overlay"></div>
            <p class="tagline-text">Software developer, artist and musician</p>
        </div>
        <div class="nav-overlay"></div>
        <nav class="nav show-js">
            <ul>
                {{#each header.sections}}
                    <li data-section="{{ this.dataUrl }}">
                        <a href="{{ this.url }}"><h2>{{ this.title }}</h2></a>
                    </li>    
                {{/each}}
            </ul>
        </nav>
    </div>
</header>
